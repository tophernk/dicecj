<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="dicecj" transaction-type="JTA">
        <jta-data-source>jdbc/MyDerbyResource</jta-data-source>

        <class>cj.dice.entity.Player</class>
        <class>cj.dice.entity.Score</class>
        <class>cj.dice.entity.OneFaceScore</class>
        <class>cj.dice.entity.TwoFaceScore</class>
        <class>cj.dice.entity.ThreeFaceScore</class>
        <class>cj.dice.entity.FourFaceScore</class>
        <class>cj.dice.entity.FiveFaceScore</class>
        <class>cj.dice.entity.SixFaceScore</class>
        <class>cj.dice.entity.OfAKindScore</class>
        <class>cj.dice.entity.FullHouse</class>
        <class>cj.dice.entity.Straight</class>
        <class>cj.dice.entity.Chance</class>
        <class>cj.dice.entity.Scoreboard</class>
        <class>cj.dice.entity.Turn</class>
        <class>cj.dice.entity.Die</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/dicecjdb"/>
            <property name="javax.persistence.jdbc.user" value=""/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>

            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect"/>
        </properties>
    </persistence-unit>
</persistence>